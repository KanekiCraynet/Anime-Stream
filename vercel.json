{
  "version": 2,
  "regions": ["sin1"],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/index.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/stream",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-control-Allow-Headers",
          "value": "Range, Content-Type"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/proxy",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/css/critical.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*\\.(html|pug))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/public/(.*)",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "destination": "/public/$1"
    },
    {
      "source": "/stream",
      "destination": "/app.js"
    },
    {
      "source": "/proxy",
      "destination": "/app.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/app.js"
    },
    {
      "source": "/v1/(.*)",
      "destination": "/app.js"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/app.js"
    },
    {
      "source": "/anime/(.*)",
      "destination": "/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/app.js"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    },
    {
      "source": "/sitemap.xml",
      "destination": "api/sitemap"
    }
  ]
}
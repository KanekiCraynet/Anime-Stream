{
  "version": 2,
  "regions": ["sin1"],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1",
    "TRUST_PROXY": "1",
    "SESSION_SECRET": "kitanime-super-secret-key-2025-production-32-chars",
    "CSRF_SECRET": "kitanime-csrf-secret-key-2025-production",
    "API_BASE_URL": "https://anime-stream-delta.vercel.app/v1",
    "CORS_ORIGIN": "https://anime-stream-delta.vercel.app",
    "SITE_URL": "https://anime-stream-delta.vercel.app",
    "UPSTREAM_API_BASE_URL": "https://anime-stream-delta.vercel.app/v1",
    "ASSETS_URL": "https://anime-stream-delta.vercel.app",
    "CDN_URL": "https://anime-stream-delta.vercel.app",
    "STATIC_URL": "https://anime-stream-delta.vercel.app/public",
    "ENABLE_ANALYTICS": "true",
    "ENABLE_ADSENSE": "true",
    "ENABLE_CACHING": "true",
    "ENABLE_COMPRESSION": "true",
    "VERCEL_ANALYTICS_ID": "prj_anime-stream-delta"
  },
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/v1/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "functions": {
    "app.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/index.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/stream",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-control-Allow-Headers",
          "value": "Range, Content-Type"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/proxy",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/css/critical.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*\\.(html|pug))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=300"
        }
      ]
    }
  ]
}
extends ../layout

block content
  div(class="container mx-auto px-4 py-8")
    div(class="max-w-md mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6")
      h1(class="text-2xl font-bold mb-4") Masuk
      if error
        div(class="mb-3 text-sm text-red-600")= error
      form(action="/auth/login" method="POST" class="space-y-4")
        div
          label(for="email" class="block text-sm mb-1") Email
          input(type="email" name="email" id="email" required class="w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900")
        div
          label(for="password" class="block text-sm mb-1") Kata Sandi
          input(type="password" name="password" id="password" required class="w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900")
        button(type="submit" class="w-full bg-primary-600 text-white py-2 rounded-lg hover:bg-primary-700") Masuk
      div(class="text-sm text-gray-600 dark:text-gray-400 mt-4")
        | Belum punya akun? 
        a(href="/auth/register" class="text-primary-600") Daftar



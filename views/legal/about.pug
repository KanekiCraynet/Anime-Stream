extends ../layout

block content
  div(class="min-h-screen bg-gray-50 dark:bg-gray-900")
    div(class="max-w-4xl mx-auto px-4 py-8")
      // Header
      div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8 mb-8")
        div(class="text-center")
          h1(class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4") Tentang Kami
          p(class="text-gray-600 dark:text-gray-400 text-lg") Mengenal tim dan visi KitaNime
          div(class="mt-4 flex items-center justify-center text-sm text-gray-500 dark:text-gray-500")
            svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z")
            span Tim yang berdedikasi untuk Anda

      // Content
      div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8")
        div(class="prose prose-lg max-w-none dark:prose-invert")
          div(class="whitespace-pre-line text-gray-700 dark:text-gray-300 leading-relaxed")= content

      // Features
      div(class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6")
        div(class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 text-center")
          svg(class="w-12 h-12 text-blue-600 dark:text-blue-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10m-9 0a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2M9 8h6m-6 4h6m-6 4h6")
          h3(class="font-semibold text-gray-900 dark:text-gray-100 mb-2") Kualitas HD
          p(class="text-sm text-gray-600 dark:text-gray-400") Streaming dengan kualitas tinggi dan stabil

        div(class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 text-center")
          svg(class="w-12 h-12 text-green-600 dark:text-green-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
          h3(class="font-semibold text-gray-900 dark:text-gray-100 mb-2") Update Terbaru
          p(class="text-sm text-gray-600 dark:text-gray-400") Episode terbaru tersedia setiap hari

        div(class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 text-center")
          svg(class="w-12 h-12 text-purple-600 dark:text-purple-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z")
          h3(class="font-semibold text-gray-900 dark:text-gray-100 mb-2") Gratis
          p(class="text-sm text-gray-600 dark:text-gray-400") Nikmati semua konten tanpa biaya

      // Back to Home
      div(class="text-center mt-8")
        a(href="/" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium")
          svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
          span Kembali ke Beranda

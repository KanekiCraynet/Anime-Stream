extends ../layout

block content
  div(class="min-h-screen bg-gray-50 dark:bg-gray-900")
    div(class="max-w-4xl mx-auto px-4 py-8")
      // Header
      div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8 mb-8")
        div(class="text-center")
          h1(class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4") Hubungi Kami
          p(class="text-gray-600 dark:text-gray-400 text-lg") Kami siap membantu dan menjawab pertanyaan Anda
          div(class="mt-4 flex items-center justify-center text-sm text-gray-500 dark:text-gray-500")
            svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z")
            span Respon cepat dalam 24 jam

      // Contact Information
      div(class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8")
        // Contact Details
        div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8")
          h2(class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-6") Informasi Kontak
          
          div(class="space-y-6")
            if contact_email
              div(class="flex items-start")
                svg(class="w-6 h-6 text-blue-600 dark:text-blue-400 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z")
                div
                  h3(class="font-medium text-gray-900 dark:text-gray-100") Email
                  a(href=`mailto:${contact_email}` class="text-blue-600 dark:text-blue-400 hover:underline")= contact_email
            
            if contact_phone
              div(class="flex items-start")
                svg(class="w-6 h-6 text-green-600 dark:text-green-400 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z")
                div
                  h3(class="font-medium text-gray-900 dark:text-gray-100") Telepon
                  a(href=`tel:${contact_phone}` class="text-green-600 dark:text-green-400 hover:underline")= contact_phone
            
            if contact_address
              div(class="flex items-start")
                svg(class="w-6 h-6 text-purple-600 dark:text-purple-400 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z")
                div
                  h3(class="font-medium text-gray-900 dark:text-gray-100") Alamat
                  p(class="text-gray-600 dark:text-gray-400")= contact_address

        // Social Media
        div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8")
          h2(class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-6") Media Sosial
          
          div(class="space-y-4")
            if social_media.facebook
              a(href=social_media.facebook target="_blank" class="flex items-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors")
                svg(class="w-6 h-6 text-blue-600 dark:text-blue-400 mr-4" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z")
                span(class="text-gray-900 dark:text-gray-100") Facebook
            
            if social_media.twitter
              a(href=social_media.twitter target="_blank" class="flex items-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors")
                svg(class="w-6 h-6 text-blue-600 dark:text-blue-400 mr-4" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z")
                span(class="text-gray-900 dark:text-gray-100") Twitter
            
            if social_media.instagram
              a(href=social_media.instagram target="_blank" class="flex items-center p-4 bg-pink-50 dark:bg-pink-900/20 rounded-lg hover:bg-pink-100 dark:hover:bg-pink-900/30 transition-colors")
                svg(class="w-6 h-6 text-pink-600 dark:text-pink-400 mr-4" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.718-1.297c-.875.807-2.026 1.297-3.323 1.297s-2.448-.49-3.323-1.297c-.807-.875-1.297-2.026-1.297-3.323s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323z")
                span(class="text-gray-900 dark:text-gray-100") Instagram
            
            if social_media.youtube
              a(href=social_media.youtube target="_blank" class="flex items-center p-4 bg-red-50 dark:bg-red-900/20 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors")
                svg(class="w-6 h-6 text-red-600 dark:text-red-400 mr-4" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z")
                span(class="text-gray-900 dark:text-gray-100") YouTube
            
            if social_media.discord
              a(href=social_media.discord target="_blank" class="flex items-center p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg hover:bg-indigo-100 dark:hover:bg-indigo-900/30 transition-colors")
                svg(class="w-6 h-6 text-indigo-600 dark:text-indigo-400 mr-4" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z")
                span(class="text-gray-900 dark:text-gray-100") Discord

      // Quick Actions
      div(class="text-center")
        a(href="/" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium")
          svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
          span Kembali ke Beranda
